        </form>
      <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
      
        {{#if login}}
        <li class="nav-item">
          <a class="nav-link" href="{{profile}}">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/employee/logout">Logout</a>
        </li>
        {{else}}
        <li class="nav-item">
          <a class="nav-link {{#is title 'Register Company'}} active{{/is}}" href="/company/register">Register
            Company</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {{#is title 'Employee Signup'}} active{{/is}}" href="/employee/signup">Signup</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {{#is title 'Employee Login'}} active{{/is}}" href="/employee/login">Login</a>
        </li>
        {{/if}}
      </ul>
