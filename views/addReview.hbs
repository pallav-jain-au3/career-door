<div id="addReview">
    <h4 class="modal-title w-100">
         Write a Review 
    </h4>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">

                {{!-- form  --}}
                <form action="/review/addReview/{{companyId}}" id="reviewForm" method="POST">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Heading</label>
                        <input type="text" class="form-control" name = "reviewHeading" id="exampleFormControlInput1" placeholder="Enter Heading">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Reviews</label>
                        <textarea class="form-control" name = "description" id="exampleFormControlTextarea1" rows="3" placeholder="Enter Review"></textarea>
                    </div>
                    <div class="form-group">
                        <p id="rating">Rating</p>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="rating" id="exampleRadios1" value="1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            1
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="rating" id="exampleRadios2" value="2">
                        <label class="form-check-label" for="exampleRadios2">
                            2
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="rating" id="exampleRadios3" value="3">
                        <label class="form-check-label" for="exampleRadios3">
                            3
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="rating" id="exampleRadios3" value="4">
                        <label class="form-check-label" for="exampleRadios3">
                            4
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="rating" id="exampleRadios3" value="5">
                        <label class="form-check-label" for="exampleRadios3">
                            5
                        </label>
                    </div>
                    </div>

                    <div class="form-group">
                    <button class="btn btn-primary">Submit Review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>