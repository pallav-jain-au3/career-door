<div class="container">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="text-primary modal-title w-100 text-center">
                    Employee Login
                </h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                {{!-- form  --}}
                <form action="/employee/login" id="employeeLogin" method="POST">

                    <div class="form-group">
                        <label>
                            <i class="far fa-user fa-2x"></i>Username:
                        </label>
                        <input type="text" class="form-control" placeholder="Username" name="username" autofocus required>
                    </div>
                    <div class="form-group">
                        <label>
                            <i class="fas fa-lock fa-2x"></i></i>Password:
                        </label>
                        <input type="password" class="form-control" placeholder="Passowrd" name="password" required>
                    </div>
                    <p class="errorMessage"></p>
                    <div class="modal-footer justify-content-center">
                        <button type="submit" class="btn btn-primary btn-block">Login</button><br>
                        <a class="btn btn-primary btn-block" href="/employee/signup">Signup</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
